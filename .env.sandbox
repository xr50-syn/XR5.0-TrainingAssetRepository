# ===========================================
# .env.sandbox - LocalStack AWS Sandbox Testing
# For partners to test without real AWS costs
# ===========================================

# Environment Type
ASPNETCORE_ENVIRONMENT=Development
STORAGE_TYPE=S3

# Database Configuration
XR50_REPO_DB_NAME=magical_library
XR50_REPO_DB_USER=sandbox_user
XR50_REPO_DB_PASSWORD=sandbox_password

# LocalStack AWS Configuration (Sandbox Testing)
# Note: LocalStack uses port 4566 for all services
# IMPORTANT: Buckets are pre-created by init scripts in localstack-init/ directory
# Pre-created buckets: xr50-sandbox-tenant-demo, xr50-sandbox-tenant-pilot1, xr50-sandbox-tenant-pilot2
AWS_HOST=http://localstack:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=eu-west-1

# S3 Settings for LocalStack
S3_BASE_BUCKET_PREFIX=xr50-sandbox
S3_FORCE_PATH_STYLE=true

# LocalStack Configuration
LOCALSTACK_SERVICES=s3,dynamodb,sqs,sns,lambda
LOCALSTACK_DEBUG=0
LOCALSTACK_PERSISTENCE=1
LOCALSTACK_VOLUME_DIR=./.localstack
